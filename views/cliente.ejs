<%- include ('partials/navbar.ejs') %> 
<%- include ('partials/header.ejs') %>  

<div class="container">
    <div class="card">
        <div class="card-header">
            <h1>Clientes</h1>
        </div>
        <div class="card-body">
            <table class="table table-bordered table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>Imagem</th>
                        <th>Nome:</th>
                        <th>CPF:</th>
                        <th>Endereço:</th>
                    </tr>
                </thead>
                <tbody>
                    <!--Chamando o Array de objetos-->
                    <% cliente.forEach(cliente => { %>
                    <tr>
                        <td style="text-align: center";><img src="/images/Pará-Lanches.png" alt="cliente.nome" class="image-size2"></td>    
                        <td><%= cliente.nome %></td>
                        <td><%= cliente.cpf %></td>
                        <td><%= cliente.endereco %></td>
                    </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
    </div>
</div>



